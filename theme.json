{
  "name": "Fox Eloading Default Theme",
  "version": "1.0.0",
  "fields": [
    {
      "field_group_id": "page_properties",
      "legend": "Page Properties",
      "fields": [
        {
          "field_id": "favicon",
          "label": "Logo Image",
          "type": "image",
          "required": true,
          "defaultValue": "favicon.ico"
        },
        {
          "field_id": "banner_text",
          "label": "Banner Text",
          "type": "text",
          "defaultValue": "Convenient E-loading 24 hours"
        },
        {
          "field_id": "footer_text",
          "label": "Powered By Text",
          "type": "text",
          "defaultValue": "DafoxTech."
        },
        {
          "field_id": "submit",
          "type": "submit"
        }
      ]
    },
    {
      "field_group_id": "page_background",
      "legend": "Page Background Image",
      "fields": [
        {
          "field_id": "background_image",
          "label": "Background Image",
          "type": "image",
          "required": false,
          "defaultValue": null
        }
      ]
    },
    {
      "field_group_id": "banners",
      "legend": "Banners",
      "fields": [
        {
          "field_id": "banners",
          "label": "Banners",
          "type": "images",
          "min": 1,
          "defaultValue": ["images/adopisoft-default-banner.png"]
        }
      ]
    },
    {
      "field_group_id": "banners_transition",
      "legend": "Banners Transition",
      "fields": [
        {
          "field_id": "banner_interval",
          "label": "Interval in seconds",
          "type": "number",
          "min": 1,
          "defaultValue": 5
        },
        {
          "field_id": "submit",
          "type": "submit"
        }
      ]
    },
    {
      "field_group_id": "sounds",
      "legend": "Sounds",
      "fields": [
        {
          "field_id": "countdown_sound",
          "label":  "Payment Countdown Sound",
          "type": "sound",
          "required": true,
          "allow_loop": true,
          "defaultValue": {
            "src": "sounds/count-down-beep.mp3",
            "format": "audio/mpeg",
            "loop": true,
            "loop_delay": 1000
          }
        },
        {
          "field_id": "countdown_bg_sound",
          "label":  "Countdown Background Sound",
          "type": "sound",
          "required": false,
          "allow_loop": true,
          "defaultValue": null
        },
        {
          "field_id": "coin_inserted",
          "label":  "Coin Inserted Sound",
          "type": "sound",
          "required": true,
          "defaultValue": {
            "src": "sounds/coin-inserted.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "error_sound",
          "label":  "Error Sound",
          "type": "sound",
          "required": true,
          "defaultValue": {
            "src": "sounds/error.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "eload_successful",
          "label": "E-Load Success Sound",
          "type": "sound",
          "defaultValue":{
            "src": "sounds/eload-successful.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "eload_failed",
          "label": "E-Load Failed Sound",
          "type": "sound",
          "defaultValue":{
            "src": "sounds/eload-failed.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "eload_processing",
          "label": "E-Load Processing Sound",
          "type": "sound",
          "defaultValue":{
            "src": "sounds/eload_processing.mp3",
            "format": "audio/mpeg"
          }
        },
        {
          "field_id": "eload_queued",
          "label": "E-Load Queued Sound",
          "type": "sound",
          "defaultValue":{
            "src": "sounds/eload_queued.mp3",
            "format": "audio/mpeg"
          }
        }
      ]
    },
    {
      "field_group_id": "css",
      "legend": "Stylesheets",
      "fields": [
        {
          "field_id": "css_files",
          "label": "CSS Files",
          "type": "stylesheets",
          "defaultValue": [
            "fonts/fonts.css",
            "styles/bootstrap.min.css",
            "styles/ie10-viewport-bug-workaround.css",
            "styles/sticky-footer-navbar.css",
            "styles/ellipsis.css",
            "styles/portal.css",
            "styles/modal.css"
          ]
        }
      ]
    },
    {
      "field_group_id": "other",
      "legend": "Uploads",
      "fields": [
        {
          "field_id": "upload_files",
          "label": "Upload Your Files",
          "type": "files",
          "defaultValue": []
        }
      ]
    }
  ]
}

